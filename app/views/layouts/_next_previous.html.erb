<div class="row next_previous topspace50">
	  <% next_page = @cms_site.pages.find_by(id:@cms_page.id+1)%>
	  <% previous_page = @cms_site.pages.find_by(id:@cms_page.id-1)%>
	  
      <div class="col-xs-3 col-xs-offset-3 center">	
		  <% if previous_page.present? %>
		    <%= link_to '<< Previous', previous_page.url %>
		  <% end %>
	  </div>
	  <div class="col-xs-3 center">
		  <% if next_page.present? %>
		    <%= link_to 'Next >>', next_page.url %>
		  <% end %>  
      </div>
</div>
